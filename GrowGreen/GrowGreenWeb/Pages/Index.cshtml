                            @*     $1$ <small class="text-muted">Last updated 3 mins ago</small> #1# *@
                            @* </p> *@
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6 col-md-12">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-4">
                        <div class="row h-100 d-flex align-items-center">
                            <img src="img/index/card-2.png" class="img-fluid rounded-start index-card-img">
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body index-card-body">
                            <h5 class="card-title">Events</h5>
                            <p class="card-text">
                                Contribute to the environment, in hands-on style, with your friends and family!
                            </p>
