@page
@model GrowGreenWeb.Pages.Admin.Newsletters.MailingList.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to remove this email from the mailing list?</h3>
<div>
    <h4>Email</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Email Record
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email.Email1)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Email.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
