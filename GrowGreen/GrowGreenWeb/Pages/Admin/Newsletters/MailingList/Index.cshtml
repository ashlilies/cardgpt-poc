@page
@model GrowGreenWeb.Pages.Admin.Newsletters.MailingList.IndexModel

@{
    ViewData["Title"] = "Mailing List";
}

<h1>Grow Green Mailing List Signups</h1>

<p>
    <a asp-page="Create" class="btn btn-success">Manual Sign-Up</a>
</p>
<div class="mb-3 card p-2">
    <div class="card-body">
       <table class="table">
           <thead>
           <tr>
               <th>
                   Email
               </th>
               <th>
                   Sign-Up Timestamp
               </th>
               <th></th>
           </tr>
           </thead>
           <tbody>
           @foreach (var item in Model.Email)
           {
               <tr>
                   <td>
                       <b>@Html.DisplayFor(modelItem => item.Email1)</b>
                   </td>
                   <td>
                       @item.TimestampSgp.ToLongDateString() @item.Timestamp.ToLongTimeString()
                   </td>
                   <td class="text-end">
                       <a asp-page="./Edit" class="btn btn-warning" asp-route-id="@item.Id">Edit</a>
                       <a asp-page="./Delete" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>
                   </td>
               </tr>
           }
           </tbody>
       </table> 
    </div>
</div>
