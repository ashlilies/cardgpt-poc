@page
@model GrowGreenWeb.Pages.Lecturer.Courses.Manage.CreateVideoModel
@{
    ViewData["Title"] = "Upload Video";
}
<h1>Course Management</h1>
<div class="row">
    @* Sidebar *@
    <div class="col-3">
        <div class="mb-3 card p-2">
            <div class="card-body">
                <h5>@Model.Course.Name</h5>
                <a asp-page="Index" asp-route-id="@Model.Course.Id" class="text-reset text-decoration-none">Edit Course Details</a>
                <hr/>
                <h5>
                    <a asp-page="QnA" asp-route-id="@Model.Course.Id" class="text-reset text-decoration-none">Q&amp;A</a>
                </h5>
                <hr/>
                <h5>
                    <span href="#" class="text-reset text-decoration-none">
                        Contents&nbsp;
                        <a asp-page="CreateLecture" asp-route-id="@Model.Course.Id" class="text-reset text-decoration-none">(Add)</a>
                    </span>
                </h5>
                @foreach (var lecture in Model.Course.Lectures)
                {
                    <a asp-page="Contents" asp-route-id="@lecture.Course.Id" asp-route-lectureId="@lecture.Id"
                       class="text-reset text-decoration-none">
                        @lecture.Name
                    </a>
                    <br/>
                }
                <hr/>
                <h5>
                    <a asp-page="Quizzes" asp-route-id="@Model.Course.Id" class="text-reset text-decoration-none">Quizzes</a>
                </h5>
            </div>
        </div>
    </div>
    <div class="col-9">
        <form method="post" asp-page-handler="" asp-route-id="@Model.Course.Id" asp-route-lectureId="@Model.Lecture.Id"
              asp-route-videoId="@Model.VideoEdit?.Id"
              enctype="multipart/form-data">
            <div class="mb-3 card p-2">
                <div class="card-body">
                    @if (Model.VideoEdit is null)
                    {
                        <h3>Upload Video for @Model.Lecture.Name</h3>
                    }
                    else
                    {
                        <h3>Edit Video: @Model.VideoEdit.Name</h3>
                    }
                    <div class="row">
                        @if (Model.VideoEdit is not null)
                        {
                            <video width="320" height="240" controls>
                                <source src="@Model.VideoEdit.Url" type="video/mp4">
                            </video>
                        }

                        <label asp-for="VideoFile" class="form-label"></label>
                        <input asp-for="VideoFile" class="form-control"/>
                        <span asp-validation-for="VideoFile" class="text-danger"></span>

                        <label asp-for="Title" class="form-label"></label>
                        <input asp-for="Title" class="form-control"/>
                        <span asp-validation-for="Title" class="text-danger"></span>

                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>


                    <div class="row text-end mt-3">
                        <div class="col-3"></div>
                        <div class="col-3"></div>
                        <div class="col-3">
                            <button type="button" class="btn btn-secondary w-100" onclick="history.back()">Cancel</button>
                        </div>
                        <div class="col-3">
                            <button class="btn btn-success w-100">Save</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>

    </div>
</div>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}