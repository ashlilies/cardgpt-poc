@page
@model GrowGreenWeb.Pages.Lecturer.Courses.Manage.IndexModel
@{
    ViewData["Title"] = "Course Management";
}

<h1>Course Management</h1>
<div class="row">
    @* Sidebar *@
    <div class="col-3">
        <div class="mb-3 card p-2">
            <div class="card-body">
                <h5>@Model.Course.Name</h5>
                <a asp-page="Index" asp-route-id="@Model.Course.Id" class="text-reset text-decoration-none">Edit Course Details</a>
                <hr />
                <h5>
                    <a asp-page="QnA" asp-route-id="@Model.Course.Id" class="text-reset text-decoration-none">Q&amp;A</a>
                </h5>
                <hr />
                <h5>
                    <span href="#" class="text-reset text-decoration-none">
                        Contents&nbsp;
                        <a asp-page="CreateLecture" asp-route-id="@Model.Course.Id" class="text-reset text-decoration-none">(Add)</a>
                    </span>
                </h5>
                @foreach (var lecture in Model.Course.Lectures)
                {
                    <a asp-page="Contents" asp-route-id="@lecture.Course.Id" asp-route-lectureId="@lecture.Id"
                   class="text-reset text-decoration-none">
                        @lecture.Name
                    </a>
                    <br />
                }
                <hr />
                <h5>
                    <a asp-page="Quizzes" asp-route-id="@Model.Course.Id" class="text-reset text-decoration-none">Quizzes</a>
                </h5>
            </div>
        </div>
    </div>

    <div class="col-9">
        <form method="post" asp-page-handler="" asp-route-id="@Model.CourseId">
            <div class="mb-3 card p-2">
                <div class="card-body">
                    <h3>Edit Course Details</h3>
                    <div class="row">
                        <div class="col-8">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>

                            <div class="row mt-3">
                                <div class="col-4">
                                    <label asp-for="StartDate" class="form-label"></label>
                                    <input asp-for="StartDate" class="form-control" />
                                    <span asp-validation-for="StartDate" class="text-danger"></span>
                                </div>
                                <div class="col-4">
                                    <label asp-for="EndDate" class="form-label"></label>
                                    <input asp-for="EndDate" class="form-control" />
                                    <span asp-validation-for="EndDate" class="text-danger"></span>
                                </div>

                                <div class="col-4">
                                    <label asp-for="MaxCapacity" class="form-label"></label>
                                    <input asp-for="MaxCapacity" class="form-control" />
                                    <span asp-validation-for="MaxCapacity" class="text-danger"></span>
                                </div>

                                <div class="col-12 mt-3">
                                    <label asp-for="Description" class="form-label"></label>
                                    <textarea asp-for="Description" class="form-control"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>


                        </div>
                        <div class="col-4">
                            @{
                                string img;
                                if (Model.ImageUrl is null)
                                {
                                    img = "/img/courses/default-course.png";
                                }
                                else
                                {
                                    img = @Model.ImageUrl;
                                }
                                <img src="@img" class="w-100" style="object-fit: contain" />
                            }
                            <button type="button" data-bs-toggle="modal" data-bs-target="#imageModal"
                                    class="btn btn-primary bg-6 w-100 mt-2">
                                Upload Thumbnail
                            </button>
                        </div>

                        <input asp-for="ImageUrl" hidden />
                    </div>


                    <div class="row text-end mt-3">
                        <div class="col-3">
                            <button type="button"
                                    data-bs-toggle="modal" data-bs-target="#deleteModal"
                                    class="btn btn-danger w-100">
                                Delete
                            </button>
                        </div>
                        <div class="col-3"></div>
                        <div class="col-3"></div>
                        <div class="col-3">
                            <button class="btn btn-success w-100">Save</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>

    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Delete Course</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you wish to do this? <strong>This cannot be undone!</strong>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>

                <form method="post" asp-page-handler="Delete" asp-route-id="@Model.CourseId">
                    <button class="btn btn-danger">Yes</button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
    <form method="post" asp-route-id="@Model.CourseId" asp-page-handler="Upload" enctype="multipart/form-data">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="imageModalLabel">Upload new image</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label asp-for="Upload" class="form-label"></label>
                        <input class="form-control" asp-for="Upload" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button class="btn btn-success">Upload</button>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts
    {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}